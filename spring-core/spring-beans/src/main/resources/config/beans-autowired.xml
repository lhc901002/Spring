<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/context
					       http://www.springframework.org/schema/context/spring-context.xsd
					       http://www.springframework.org/schema/beans
					       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <context:annotation-config/>

    <bean id="newUserInfo" class="org.michaelliu.spring.beans.UserInfo">
        <property name="id" value="1999"/>
        <property name="email" value="liu@163.com"/>
        <property name="addressBook">
            <list value-type="java.lang.String">
                <value>Beijing</value>
                <value>Shanghai</value>
                <value>New York</value>
            </list>
        </property>
    </bean>

    <!-- injection via autowire, default by type, using annotation -->
    <bean id="usageAutowiredByType" class="org.michaelliu.spring.beans.autowire.UsageAnnotationByType">
        <property name="id" value="123"/>
    </bean>

    <!-- injection via autowire, by name, using annotation -->
    <bean id="usageAutowiredByName" class="org.michaelliu.spring.beans.autowire.UsageAnnotationByName">
        <property name="id" value="123"/>
    </bean>

    <!-- injection via autowire, by default, using configuration -->
    <bean id="usageConfigurationByDefault" class="org.michaelliu.spring.beans.autowire.UsageConfiguration"
          autowire="default">
        <property name="id" value="123"/>
    </bean>

    <!-- injection via autowire, by type, using configuration -->
    <bean id="usageConfigurationByType" class="org.michaelliu.spring.beans.autowire.UsageConfiguration"
          autowire="byType">
        <property name="id" value="123"/>
    </bean>

    <!-- injection via autowire, by name, using configuration -->
    <bean id="usageConfigurationByName" class="org.michaelliu.spring.beans.autowire.UsageConfiguration"
          autowire="byName">
        <property name="id" value="123"/>
    </bean>

</beans>