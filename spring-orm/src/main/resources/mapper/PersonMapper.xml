<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.myspring.orm.ibatis.mapper.PersonMapper">

    <resultMap id="personBaseResultMap" type="Person">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="p_name" property="name" jdbcType="VARCHAR"/>
        <result column="p_age" property="age" jdbcType="TINYINT"/>
        <result column="c_id" property="countryId" jdbcType="INTEGER"/>
    </resultMap>

    <resultMap id="countryBaseResultMap" type="Country">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="c_name" property="name" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="person_Base_Column_List">
        id, p_name, p_age, c_id
    </sql>

    <sql id="country_Base_Column_List">
        id, c_name
    </sql>

    <select id="selectByPrimaryKey" resultMap="personBaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="person_Base_Column_List"/>
        from person
        where id = #{id, jdbcType=INTEGER}
    </select>

    <select id="selectAll" resultMap="personBaseResultMap">
        select
        <include refid="person_Base_Column_List"/>
        from person
    </select>

    <select id="selectCountryByPersonId" resultMap="countryBaseResultMap" parameterType="java.lang.Long">
        SELECT country.id, country.c_name
        FROM person, country
        WHERE person.c_id = country.id AND person.id = #{id, jdbcType=INTEGER}
    </select>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete from person
        where id = #{id, jdbcType=INTEGER}
    </delete>

    <insert id="insertPerson" parameterType="Person" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
        insert into person (id, p_name, p_age, c_id)
        values (#{id, jdbcType=INTEGER}, #{name, jdbcType=VARCHAR},
                #{age, jdbcType=TINYINT}, #{countryId, jdbcType=VARCHAR})
        ]]>
    </insert>

    <insert id="insertSelective" parameterType="Person" useGeneratedKeys="true" keyProperty="id">
        insert into person
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="name != null">
                p_name,
            </if>
            <if test="age != null">
                p_age,
            </if>
            <if test="countryId != null">
                c_id,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id, jdbcType=INTEGER},
            </if>
            <if test="name != null">
                #{name, jdbcType=VARCHAR},
            </if>
            <if test="age != null">
                #{age, jdbcType=TINYINT},
            </if>
            <if test="countryId != null">
                #{countryId, jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

</mapper>